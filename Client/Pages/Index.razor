@page "/"
@using Microsoft.AspNetCore.Components
@inject IUriHelper UriHelper

<p>@siteName</p>
<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<p>現在時刻が0秒～29秒なら/Counterに飛びます。</p>
<p>現在時刻が30秒～59秒なら/FetchDataに飛びます。</p>
<button class="btn　btnprimary"@onclick="@Jump">Click　to　jump　another　Page</button>

<div>
    <ScaleText Size="1">小</ScaleText>
    <ScaleText Size="2">中</ScaleText>
    <ScaleText Size="3">大</ScaleText>
    <ScaleText Size="4">特大</ScaleText>
</div>
<div>
    <input type="checkbox" @bind="@mySwich" />
    <input type="text" @bind="@myText" />
    <input @bind="@myDate" @bind:format="yyyy-MM-dd" />
    <p>@mySwich</p>
    <p>@myText</p>
    <p>@myDate</p>
</div>

@code{
    private bool mySwich = false;
    private string myText = "REWRITE ME";
    [Parameter]
    private DateTime myDate{get;set;} = new DateTime(2020,1,1);
    [CascadingParameter(Name="siteName")]
    protected string siteName{get;set;}

    void Jump(){
        var　sec　=　DateTimeOffset.Now.Second;
        if(sec >= 0 && sec <= 29){
            UriHelper.NavigateTo("/Counter");
        }
        else{
            UriHelper.NavigateTo("/FetchData");
        }
    }
}

